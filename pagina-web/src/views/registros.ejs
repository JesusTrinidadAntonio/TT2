<%- include('partials/_header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Imagen</th>
                        <th scope="col">Nombre del cuerpo de agua </th>
                        <th scope="col">Fecha  </th>
                        <th scope="col">Área</th>
                        <th scope="col">Perímetro</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data){%>
                        <% for(var i=0; i<data.length; i++) { %>
                            <% if (i % 2 !== 0) { %>
                            <tr class="table-secondary">
                                <th scope="row"> No existe Imagen</th>
                                <td> <%= data[i].nombre_cuerpo_a %></td>
                                <td> <%= data[i].fecha_cuerpo_a %></td>
                                <td> <%= data[i].area_cuerpo_a %></td>
                                <td> <%= data[i].perimetro_cuerpo_a %></td>
                                <td><a href=""> Ver registro</a></td>
                            </tr>
                            <% } else { %>
                                <tr class="table-success">
                                    <th scope="row"> No existe Imagen</th>
                                    <td> <%= data[i].nombre_cuerpo_a %></td>
                                    <td> <%= data[i].fecha_cuerpo_a %></td>
                                    <td> <%= data[i].area_cuerpo_a %></td>
                                    <td> <%= data[i].perimetro_cuerpo_a %></td>
                                    <td><a href=""> Ver registro</a></td>
                                </tr>
                            <% } %>    
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    
</div>

<%- include('partials/_footer') %>