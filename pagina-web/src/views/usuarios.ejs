<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data){%>
                        <% for(var i=0; i<data.length; i++) { %>
                            <% if (i % 2 !== 0) { %>
                            <tr class="table-secondary">
                                <th scope="row"> <%= i+1 %></th>
                                <td> <%= data[i].nombre %></td>
                                <td> <%= data[i].contraseña %></td>
                                <td> <a href="/delete/<%= data[i].id %>" class="btn btn-outline-danger btn-sm">Eliminar</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-outline-primary btn-sm">Modificar</a></td>
                              </tr>
                            <% } else { %>
                                <tr class="table-success">
                                    <th scope="row"> <%= i+1 %></th>
                                    <td> <%= data[i].nombre %></td>
                                    <td> <%= data[i].contraseña %></td>
                                    <td> <a href="/delete/<%= data[i].id %>" class="btn btn-outline-danger btn-sm">Eliminar</a>
                                     <a href="/update/<%= data[i].id %>" class="btn btn-outline-primary btn-sm">Modificar</a></td>
                                </tr>
                            <% } %>    
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    
</div>

<%- include('partials/_footer') %>
