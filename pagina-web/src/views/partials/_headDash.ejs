    <!-- Script para cambiar la clase 'active' al hacer clic -->
    <script>
        // Esperamos que el DOM se haya cargado completamente
        document.addEventListener('DOMContentLoaded', function() {
            // Seleccionamos todos los enlaces dentro de la clase sidebar
            const links = document.querySelectorAll('.sidebar a');
    
            // Recorremos todos los enlaces y les añadimos un evento de clic
            links.forEach(link => {
                link.addEventListener('click', function() {
                    // Eliminamos la clase 'active' de todos los enlaces
                    links.forEach(link => link.classList.remove('active'));
    
                    // Añadimos la clase 'active' al enlace que se hizo clic
                    this.classList.add('active');
                });
            });
        });
    </script>
