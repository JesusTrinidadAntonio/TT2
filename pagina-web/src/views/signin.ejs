<%- include('partials/_header') %>

<div class="col-md-5" style="width: auto;" >
    <div class="card border-primary mb-3" style=" margin-left: 32%; margin-right: 32%; margin-top: 2%;
    border-radius: 10%; border-width: 2%; ">
        <div class="card-header" 
        style="color: black; font-size: 35px; font-family: monospace;font-weight: bold; 
        text-align: center;"> REGISTRO </div>
        <div class="card-body" style="text-align: center;">
            <form action="/add" method="post" style="margin-left: 0%; margin-right: 0%;">
                <div class="form-group">
                    <label for="nombres_usuario">Nombres:</label>
                    <input type="text" name="nombres_usuario" class="form-control mb-3" 
                    style="text-align: center;height: 25px; font-size: 15px; font-family: monospace;">     
                </div>
                <div class="form-group">
                    <label for="apellidos_usuario">Apellidos:</label>
                    <input type="text" name="apellidos_usuario"  class="form-control mb-3"
                    style="text-align: center; height: 25px; font-size: 15px; font-family: monospace;">
                </div>
                <div class="form-group">
                    <label for="correo_usuario">Correo:</label>
                    <input type="text" name="correo_usuario" placeholder="" class="form-control mb-3"
                    style="text-align: center; height: 25px; font-size: 15px; font-family: monospace;">
                </div>
                <div class="form-group">
                    <label for="contraseña_usuario">Contraseña:</label>
                    <input type="text" name="contraseña_usuario" class="form-control mb-3"
                    style="text-align: center; height: 25px; font-size: 15px; font-family: monospace;">
                </div>
                <div class="form-group">
                    <label for="tipo_usuario">Tipo de usuario 1 o 2:</label>
                    <input type="text" name="tipo_usuario" class="form-control mb-3"
                    style="text-align: center; height: 25px; font-size: 15px; font-family: monospace;">
                </div>
                <button type="submit" class="btn btn-outline-info" style="font-weight: bold;"> REGISTRARSE</button>
            </form>
        </div>
    </div>
</div>
</div>

<%- include('partials/_footer') %>